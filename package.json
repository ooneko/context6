{
  "name": "local-knowledge-mcp",
  "version": "1.0.0",
  "description": "MCP server for searching and accessing local Markdown knowledge base",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "local-knowledge-mcp": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "lint": "eslint 'src/**/*.ts'",
    "format": "prettier --write 'src/**/*.ts'",
    "test": "jest --config jest.config.mjs",
    "test:watch": "jest --config jest.config.mjs --watch",
    "test:coverage": "jest --config jest.config.mjs --coverage",
    "test:manual": "npm run build && node tests/manual/run-all-tests.js",
    "inspector": "npx @modelcontextprotocol/inspector dist/index.js"
  },
  "keywords": [
    "mcp",
    "knowledge",
    "markdown",
    "search"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.6.0",
    "@xenova/transformers": "^2.17.2",
    "chokidar": "^3.6.0",
    "cohere-ai": "^7.17.1",
    "flexsearch": "^0.7.43",
    "glob": "^10.3.10",
    "gray-matter": "^4.0.3",
    "minimatch": "^9.0.3",
    "onnxruntime-node": "^1.22.0-rev",
    "openai": "^5.9.2"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.5.12",
    "@types/minimatch": "^5.1.2",
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  }
}
