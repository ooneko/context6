{
  "knowledgePaths": [
    "/Users/huabinhong/Code/bigcat/context7/test-knowledge"
  ],
  "ignorePatterns": [
    "node_modules/**",
    "*.tmp.md",
    ".obsidian/**",
    ".git/**",
    "**/.DS_Store"
  ],
  "indexOptions": {
    "maxFileSizeMb": 10,
    "cacheEnabled": true,
    "updateIntervalMs": 5000
  },
  "searchOptions": {
    "maxResults": 20,
    "contextLength": 200,
    "fuzzyThreshold": 0.6,
    "defaultMode": "semantic",
    "semantic": {
      "enabled": true,
      "provider": "openai",
      "model": "text-embedding-3-small",
      "apiKey": "YOUR_OPENAI_API_KEY_HERE",
      "cacheEmbeddings": true,
      "batchSize": 100
    },
    "hybrid": {
      "keywordWeight": 0.7,
      "semanticWeight": 0.3
    }
  }
}